extends ../layout

block content
  .panel.panel-default
    .panel-heading
      h1 Confirm Deletion of Product: #{product.name}
    .panel-body
      form(action=`/product/delete/${product.id}`, method="post")
        
        button.btn.btn-primary(type="submit") Delete
        a.btn.btn-default(style="margin-left:1em", href="/product") Cancel